---
import BaseLayout from '../../layouts/BaseLayout.astro';
import IndividualProduct from "../../components/IndividualProduct.astro";
import ProductLayout from "../../layouts/ProductLayout.astro";

export async function getStaticPaths() {
  return [
    { params: { product: "giftBags"}, props: {pageTitle: "Folding gift bags"} },
    { params: { product: "giftBoxes"}, props: {pageTitle: "Gift boxes" } },
    { params: { product: "foldingGiftBoxes"}, props: {pageTitle: "Folding gift boxes" } },
    { params: { product: "tinBoxes"}, props: {pageTitle: "Tin boxes" } },
  ];
}

const { product } = Astro.params;
const { pageTitle } = Astro.props;
---
<ProductLayout pageTitle={pageTitle}>
    <IndividualProduct folder={product} />
</ProductLayout>